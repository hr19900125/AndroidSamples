<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/progress_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:visibility="gone"
    android:orientation="vertical"
    android:background="#00000000">

    <com.hr.toy.widget.common.LoadingView
        android:id="@+id/mc_loading_view"
        android:layout_gravity="center_horizontal"
        style="@style/Widget.MeizuCommon.LoadingView.Light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/mc_loading_view_text"
        android:layout_gravity="center_horizontal"
        style="@style/LoadingViewTextStyle.Light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/mc_loading_view_text" />

</FrameLayout>