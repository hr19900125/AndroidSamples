<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="AppTheme" >
        <attr name="MeizuCommon.LoadingTextStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>

    <declare-styleable name="WaterRippleView">
        <attr name="myRippleSpacing" format="dimension|reference" />
        <attr name="myRippleCount" format="integer|reference" />
        <attr name="myRippleColor" format="color|reference" />
        <attr name="myRippleCenterIcon" format="reference" />
        <attr name="myRippleAutoRunning" format="boolean" />
    </declare-styleable>

    <declare-styleable name="RoundFrameLayout">
        <attr name="radius" format="dimension" />
        <attr name="topLeftRadius" format="dimension" />
        <attr name="topRightRadius" format="dimension" />
        <attr name="bottomLeftRadius" format="dimension" />
        <attr name="bottomRightRadius" format="dimension" />
    </declare-styleable>

    <!--  LoadingTextView 属性 -->
    <declare-styleable name="LoadingTextView">
        <attr name="mcLoadingText" format="string" />
        <attr name="mcErrorText" format="string" />
        <attr name="mcDotRadius" format="integer" />
        <attr name="mcLoadingTextColor" format="integer" />
        <attr name="mcDotColor" format="integer" />
        <attr name="mcDotNum" format="integer" />
    </declare-styleable>
</resources>